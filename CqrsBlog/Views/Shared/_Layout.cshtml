<!DOCTYPE html>
<html>
    <head>
        <title>CqrsBlog - @ViewBag.Title</title>
        <!--[if lte IE 9]><link href="@Url.Content("~/Content/ie.css")" rel="stylesheet" type="text/css" /><![endif]-->
        <link href="@Url.Content("~/Content/reset.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/1140.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    </head>
    <body>
        <div class="container">
            <div class="row">
                <div class="twelvecol last">
                    <h1>CqrsBlog</h1>
                </div>
            </div>
            <div class="row">
                <div class="threecol">
                    <h2>Site</h2>
                    <div class="menu-item">
                        @Html.RouteLink("Posts", "Posts.DisplayPublishedPosts")
                    </div>
                    <h2>Admin</h2>
                    <div class="menu-item">
                        @Html.RouteLink("Posts", "Admin.Posts")
                    </div>
                    <div class="menu-item">
                        @Html.RouteLink("Comments", "Admin.Comments")
                    </div>
                </div>
                <div class="ninecol last">
                    @RenderBody()
                </div>
            </div>
            <div class="row footer">
                <div class="twelvecol last">
                    <p>Copyright &copy; Kim Johansson 2012</p>
                </div>
            </div>
        </div>
    </body>
</html>